{
    "root": {
        "src": "./src",
        "dist": "./public",
        "watch": "./src",
        "baseDir": "./"
    },
    "tasks": {
        "javascripts": {
            "src": "javascripts",
            "dist": "javascripts",
            "watch": "javascripts/**/*.js",
            "entries": {
                "main": "./main.js"
            },
            "publicPath": "http://storage.gloria-jeans.ru/prod/"
        },
        "stylesheets": {
            "src": "stylesheets/*.scss",
            "dist": "stylesheets",
            "watch": "stylesheets/**/*.*"
        },
        "spritePng": {
            "src": "sprite-png/*.*",
            "dist": "images",
            "watch": "sprite-png/*.*",
            "template": "src/sprite-png.template",
            "core": "src/stylesheets/core/"
        }
    }
}